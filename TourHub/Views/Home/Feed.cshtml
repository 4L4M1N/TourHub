@model IEnumerable<TourHub.Models.Tour>
@{
    ViewBag.Title = "Feed";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Feed</h2>
<ul class="tevent">
    @foreach (var t in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @t.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @t.DateTime.ToString("d ")
                </div>
                <div class="time">
                    @t.DateTime.ToString("HH:mm")
                </div>
            </div>
            <div class="details">
                <span class="place">
                    @t.Place
                </span>
                <span class="cost">
                    @t.Cost
                </span>
                <span class="genre">
                    @t.Genre.Name
                </span>
            </div>
        </li>
    }
</ul>

